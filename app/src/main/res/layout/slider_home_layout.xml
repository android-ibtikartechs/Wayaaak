<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:minHeight="205dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/lout_mark"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:background="@color/tw__composer_blue"
        android:orientation="vertical"
        />


    <TextView
        android:id="@+id/im_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_toStartOf="@id/lout_mark"
        android:background="@color/blackLite"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />
</RelativeLayout>
</android.support.v7.widget.CardView>